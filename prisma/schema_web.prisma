generator client {
  provider = "prisma-client-js"
  output   = "./generated/web"
}

datasource db {
  provider = "mysql"
}

model gk_about {
  id          Int      @id @default(autoincrement())
  title       String
  description String?  @db.Text
  is_active   Boolean  @default(true)
  created_at  DateTime @default(now())
  image       String
}

model gk_event {
  id         Int      @id @default(autoincrement())
  schedule   String?
  title      String
  content    String?  @db.Text
  slug       String   @unique
  is_active  Boolean  @default(dbgenerated("(b'1')")) @db.Bit(1)
  type       String?
  created_at DateTime @default(now())
}

model gk_news {
  id         Int      @id @default(autoincrement())
  schedule   String?
  title      String
  content    String?  @db.Text
  slug       String   @unique
  is_active  Boolean  @default(true)
  type       String?
  created_at DateTime @default(now())
}
